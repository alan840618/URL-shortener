<div class="container justify-content-center">

 <form action="/" method="POST" style="display: inline;">
  <div class="input-group">
    <input class="form-control" type="text" placeholder="Input url here" required>
    <button class="btn btn-primary" type="submit">Shorten</button>
  </div>
 </form>
{{#if originUrl}}
 <div class="result">
  <h3>Success! Please use this link:</h3>
  <p id="generatedURL">{{originUrl}}/{{shortUrl}}</p>
 </div>
 <button type="button" class="btn btn-primary" onclick="copy()">Copy</button>
{{/if}}
</div>